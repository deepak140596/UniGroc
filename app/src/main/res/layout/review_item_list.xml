<?xml version="1.0" encoding="utf-8"?><!--
FrameLayout is used as top level layout because when the CardView is getting
animated, it needs to stay centered. Otherwise we need to animate x and y values
too. layout_gravity="center_horizontal" is a lot simpler.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/list_item_bg_collapsed"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            tools:layout_marginLeft="20dp"
            tools:layout_marginRight="20dp">

        <FrameLayout
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <!--
            scale_container is used to scale down the item when the scale down
            animation happens. card_container re-sizes height and width while
            scale_container scales the inside views to make it look natural
            -->

            <RelativeLayout
                    android:id="@+id/scale_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/list_item_horizontal_padding"
                    android:paddingTop="@dimen/list_item_vertical_padding"
                    android:paddingRight="@dimen/list_item_horizontal_padding"
                    android:paddingBottom="@dimen/list_item_vertical_padding"
                    android:transformPivotX="0dp">

                <ImageView
                        android:id="@+id/chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/userProfile"
                        android:layout_marginEnd="8dp"
                        android:tint="@color/title_color"
                        app:srcCompat="@drawable/ic_baseline_chevron_right_24" />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userProfile"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_toEndOf="@id/chevron"
                        android:src="@drawable/user" />

                <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/userProfile"
                        android:paddingStart="@dimen/dimen_16"
                        android:text="Ahraar Alam"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal" />


                <com.willy.ratingbar.BaseRatingBar
                        android:id="@+id/RatingBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userName"
                        android:layout_marginStart="@dimen/space_4"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/userProfile"
                        app:srb_clearRatingEnabled="true"
                        app:srb_clickable="false"
                        app:srb_drawableEmpty="@drawable/empty_star"
                        app:srb_drawableFilled="@drawable/filled_star"
                        app:srb_isIndicator="false"
                        app:srb_minimumStars="0"
                        app:srb_numStars="5"
                        app:srb_rating="0"
                        app:srb_scrollable="true"
                        app:srb_starHeight="25dp"
                        app:srb_starPadding="@dimen/space_1"
                        app:srb_starWidth="25dp"
                        app:srb_stepSize="0.5">

                </com.willy.ratingbar.BaseRatingBar>

                <TextView
                        android:id="@+id/getTimeAgo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RatingBar"
                        android:layout_toEndOf="@id/userProfile"
                        android:paddingTop="@dimen/space_4"
                        android:text="few mints ago"
                        android:textAlignment="textEnd" />


                <LinearLayout
                        android:id="@+id/expand_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/getTimeAgo"
                        android:layout_alignStart="@id/userProfile"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="gone">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/ic_thumb_up_24"
                                android:backgroundTint="@color/md_green_500"
                                android:transformPivotX="0dp" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="positive"
                                android:textAllCaps="true"
                                android:textColor="@color/md_green_500" />
                    </LinearLayout>

                    <TextView
                            android:id="@+id/positive_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="46dp"
                            android:background="#E7F7F7"
                            android:text="positive Review"
                            android:textColor="@color/black" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/ic_thumb_down_24"
                                android:backgroundTint="@color/primaryDarkColor"
                                android:transformPivotX="0dp" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Negative"
                                android:textAllCaps="true"
                                android:textColor="@color/primaryDarkColor" />
                    </LinearLayout>

                    <TextView
                            android:id="@+id/negative_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="46dp"
                            android:background="#E7F7F7"
                            android:text="positive Review"
                            android:textColor="@color/black" />

                    <TextView
                            android:id="@+id/main_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="@dimen/dimen_16"
                            android:background="#E7F7F7"
                            android:text="Main Review"
                            android:textColor="@color/black" />


                </LinearLayout>
            </RelativeLayout>

            <View
                    android:id="@+id/list_item_fg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0"
                    android:background="@color/list_item_fg"
                    android:visibility="visible"
                    tools:visibility="gone" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>