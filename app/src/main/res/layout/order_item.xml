<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="4dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/order_item_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shopping_cart_color" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/order_item_iv"
                android:orientation="vertical">

            <com.avvnapps.unigroc.Fonts.LatoBLack
                    android:id="@+id/order_item_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="89 "
                    android:textColor="@color/color_black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            <com.avvnapps.unigroc.Fonts.LatoBLack
                    android:id="@+id/order_item_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sample Name for sample cart item"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                <TextView
                        android:id="@+id/order_item_metric_weight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="1kg"
                        android:textSize="14sp" />

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp">


                    <com.avvnapps.unigroc.Fonts.LatoBLack
                            android:id="@+id/order_item_total_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="2"
                            android:textAlignment="center"
                            android:textColor="@color/color_blue"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>

